{% extends "navbar.jinja2" %}
{% block content %}
    <style>
        label, input, select, button, h1, .general {
            margin-left: 100px;
            margin-top: 10px;
            /*margin: 10px 0 0 100px;*/
        }

        .data_entry {
            margin-left: 100px;
            margin-top: 10px;
            margin-bottom: 50px;
        }
        
    </style>
    <h1>My Account</h1>
    <div class="row general">
        <b>Full Name:</b>
        &nbsp;&nbsp;
        <form method="POST"><button type="submit" name="submitbutton" value="name" class="btn btn-warning">Edit</button></form>
    </div>
    <div class ="row data_entry">
        {{user.fname + " " + user.lname}}
    </div>
    <div class="row general">
        <b>Password:</b> 
        <form method="POST"><button type="submit" name="submitbutton" value="password" class="btn btn-warning">Edit</button></form>
    </div>
    <div class ="row data_entry">
        **********
    </div>
    <div class="row general">
        <b>Email:</b> 
        <form method="POST"><button type="submit" name="submitbutton" value="email" class="btn btn-warning">Edit</button></form>
    </div>
    <div class ="row data_entry">
        {{user.email}}
    </div>
    <div class="row general">
        <b>Address:</b> 
        <form method="POST"><button type="submit" name="submitbutton" value="address" class="btn btn-warning">Edit</button></form>
    </div>
    <div class ="row general">
        {{house_number + " " + user.street_name}}
    </div>
    <div class ="row data_entry">
        {{user.city + ", " + user.province + " " + user.postal_code}}
    </div>
    <div class="row general">
        <b>Payment Methods:</b>
        <form method="POST"><button type="submit" name="submitbutton" value="payment_methods" class="btn btn-warning">Edit</button></form> 
    </div>
    <div class ="row data_entry">
        {{user.payment_method}}
    </div>

    <form method="POST"><button type="submit" name="submitbutton" value="home" class="btn btn-warning">Return back to home</button></form>
    
{% endblock content %}





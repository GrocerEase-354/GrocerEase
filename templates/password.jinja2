{% extends "navbar.jinja2" %}
{% block content %}
    <style>
        label, input, select, button, h1, .alert {
            margin-left: 100px;
            margin-top: 10px;
            /*margin: 10px 0 0 100px;*/
        }
        
    </style>

    <style link=""></style>
    <h1>My Account</h1>
    <div class="content-section">
        <div style="width: 500px;">
            <form method="POST" action="{{ url_for('password') }}">
                {{ form.hidden_tag() }}
                <fieldset class="form-group">
                <div class="form-group">
                        {{ form.user_password.label(class="form-control-label") }}
                        {% if form.user_password.errors %}
                            {{ form.user_password(class="form-control form-control-lg is-invalid") }}
                            <div class="invalid-feedback">
                                {% for error in form.user_password.errors %}
                                    <span>{{ error }}</span>
                                {% endfor %}
                            </div>
                        {% else %}
                            {{ form.user_password(class="form-control form-control-lg") }}
                        {% endif %}
                    </div>
                    <div class="form-group">
                        {{ form.confirm_user_password.label(class="form-control-label") }}
                        {% if form.confirm_user_password.errors %}
                            {{ form.confirm_user_password(class="form-control form-control-lg is-invalid") }}
                            <div class="invalid-feedback">
                                {% for error in form.confirm_user_password.errors %}
                                    <span>{{ error }}</span>
                                {% endfor %}
                            </div>
                        {% else %}
                            {{ form.confirm_user_password(class="form-control form-control-lg") }}
                        {% endif %}
                    </div>
                </fieldset>
                <div class="form-group">
                    {{ form.submit(class="btn btn-warning") }}
                </div>
            </form>
        </div>
    </div>
{% endblock content %}